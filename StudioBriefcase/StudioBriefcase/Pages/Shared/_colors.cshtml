<style id="colorscheme">
    :root {        
        --background: #eeeeee;
        --foreground: #cccccc;
        --text-color1: #black;
        --text-color2: black;
        --shadow1: black;
        --shadow2: #cccccc;

        --menu-background: #111111;
    }

    .c-bg {
        background-color: var(--background);
        color: var(--text-color1);
    }

    .c-fg {
        background-color: var(--foreground);
        color: var(--text-color2);
    }

    .c-shadow {
        box-shadow: 0 2px 4px 0 var(--shadow1), 0 3px 10px 0 var(--shadow2);
    }

    .c-menu {
        background-color: var(--menu-background);
        color:#eeeeee;
    }

    a {
        text-decoration: none;
        color: var(--text-color1);
    }

        a:visited {
            color: var(--text-color1);
        }

        a:hover {
            color: red; /* #a1a1a1;*/
        }

</style>
