@{
    List<StudioBriefcase.Models.DonationModel> donators = new List<StudioBriefcase.Models.DonationModel>
    {
        new StudioBriefcase.Models.DonationModel("Your Name Here!", 100),
        new StudioBriefcase.Models.DonationModel("Kangaroo Boogaloo", 87),
        new StudioBriefcase.Models.DonationModel("Jonothan McSmith", 37),
        new StudioBriefcase.Models.DonationModel("Dino Nugs", 36),
        new StudioBriefcase.Models.DonationModel("Tator Tots", 17),
        new StudioBriefcase.Models.DonationModel("Salty Fries", 4),
        new StudioBriefcase.Models.DonationModel("Or Your Name Here!", 2),
    };
}
<div class="accordion w100 c-bg">
    <h2>Top Donors of 2024 Fundraiser --EXAMPLE ONLY--</h2>
    <table class="w100 c-fg">
        <thead class="w100">
            <tr class="w100 box-pushstart">
                <th class="p2 " style="width:5%">#</th>
                <th class="p2 w75">Top 5 Donors</th>
                <th class="p2">Amount</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 5; i++)
            {
                <tr class="box-pushstart">
                    <td>@(i + 1)</td>
                    <td>@donators[i].Name</td>
                    <td>$@donators[i].amount</td>
                </tr>
            }
        </tbody>
    </table>


    <div class="accordion-item w100">
        <button class="accordion-toggle w100 c-fg event-toggle text-sm" data-target="2024fundraiser">
            Expand Other Donors
        </button>

        <div class="accordion-target-vertical box-col c-fg" id="2024fundraiser">

            <table>
@*                 <thead>
                    <tr class="box-pushstart">
                        <th style="width:5%">#</th>
                        <th class="w75">Name of Doner</th>
                        <th>Amount</th>
                    </tr>
                </thead> *@
                <tbody>
                    @for(int i = 5; i < donators.Count; i++)
                    {
                        <tr class="box-pushstart">
                            <td>@(i + 1)</td>
                            <td>@donators[i].Name</td>
                            <td>$@donators[i].amount</td>
                        </tr>
                    }



                </tbody>
            </table>

        </div>

    </div>

</div>
