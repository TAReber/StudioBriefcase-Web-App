@*
    StudioBriefcase/Pages/Shared/Components/Library/_LibrarySelectorOptions.cshtml
    Created by: Tyler Andrew Reber

    Reusable Component to Render a list of options for a select element.
    Tuple Left contains the list of options
    Tuple Right contains the selected option
*@

@model Tuple<StudioBriefcase.Models.SelectorListModel, uint>

@foreach (var item in Model.Item1.list)
{
    if (item.id == Model.Item2)
    {
        <option value="@item.id" selected>@item.text</option>
    }
    else
    {
        <option value="@item.id">@item.text</option>
    }
}