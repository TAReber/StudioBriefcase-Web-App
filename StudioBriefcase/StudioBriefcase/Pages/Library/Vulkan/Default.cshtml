@page
@model StudioBriefcase.Pages.Tutorials.Vulkan.DefaultModel
@{
    Layout = "~/Pages/Shared/_ContentNavigator.cshtml";
    ViewData["Folder"] = "Vulkan";
    <link rel="stylesheet" href="~/@(nameof(StudioBriefcase)).styles.css" />
}

@section Selector_Panel {


    <div class="flex-shrink-0">

        <div>
            <ul class="clear_list_style">
                <li>
                    <div class="thumbnail_link">
                        <a href="https://registry.khronos.org/vulkan/specs/1.3-extensions/html/vkspec.html" target="_blank">
                            <img src="~/images/Vulkan/Navigator/Khronos_Inverted_170px_June18.png" class="img-thumbnail img_format" style="background-color:black" />
                        </a>
                        <div class="thumbnail_text">Specifications</div>
                    </div>
                </li>
                <li>
                    <div class="thumbnail_link">
                        <a href="https://www.vulkan.org" target="_blank">
                            <img src="~/images/Vulkan/Navigator/Vulkan_170px_Dec16.jpg" class="img-thumbnail img_format" />
                        </a>
                        <div class="thumbnail_text">API Reference</div>
                    </div>
                </li>
                <li>
                    <div class="thumbnail_link">
                        <a href="https://vulkan.lunarg.com/doc/sdk" target="_blank">
                            <img src="~/images/Vulkan/Navigator/LunarG_Logo.png" class="img-thumbnail img_format" />
                        </a>
                        <div class="thumbnail_text">SDK Docs</div>
                    </div>
                </li>
                <li>
                    <div class="thumbnail_link">
                        <a href="https://registry.khronos.org/vulkan/specs/1.3-extensions/man/html/" target="_blank">
                            <img src="~/images/Vulkan/Navigator/API Reference.png" class="img-thumbnail img_format" style="background-color:slategrey" />
                        </a>
                        <div class="thumbnail_text">API Reference</div>
                    </div>
                </li>
                <li>
                    <div class="thumbnail_link">
                        <a href="https://www.khronos.org/files/vulkan11-reference-guide.pdf" target="_blank">
                            <img src="~/images/Vulkan/Navigator/1.1ReferenceGuide.png" class="img-thumbnail img_format" style="background-color:steelblue" />
                        </a>
                        <div class="thumbnail_text">Open</div>
                    </div>
                </li>
            </ul>

            <p><cite>&emsp;version 1.3.245</cite></p>
        </div>

        <div class="language_section">
            <p>English</p>
        </div>


        <ul class="list-unstyled ps-0 ml-2">
            <li class="mb-1">
                <div>
                    <button class="chapter_btn_toggle collapsed align-items-center rounded FG" type="button"
                            data-bs-toggle="collapse" data-bs-target="#introduction" aria-expanded="true" aria-controls="introduction">
                        <ion-icon class="expanded" name="chevron-forward-outline"></ion-icon>
                        Introduction
                    </button>

                    <div class="collapse" id="introduction">
                        <ul class="chapter_listElement list-unstyled fw-normal pb-1 small">
                            <li><a href="#" id="intro-link" class="link_decor content-link" data-url="@Url.Page("/Library/" + ViewData["Folder"] + "/_intro")">Introduction</a></li>
                        </ul>
                    </div>
                </div>

                <div>
                    <button class="chapter_btn_toggle collapsed align-items-center rounded FG" type="button"
                            data-bs-toggle="collapse" data-bs-target="#overview" aria-expanded="true" aria-controls="overview">
                        <ion-icon class="expanded" name="chevron-forward-outline"></ion-icon>
                        Overview
                    </button>
                    <div class="collapse" id="overview">
                        <ul class="chapter_listElement list-unstyled fw-normal pb-1 small">
                            <li><a href="#" class="link_decor content-link" data-url="@Url.Page("/Library/Vulkan/_overview")">Overview</a></li>
                            <li><a href="#" class="link_decor content-link" data-url="@Url.Page("/Library/Vulkan/_conventions")">Common Conventions</a></li>
                            <li><a href="#" class="link_decor content-link" data-url="@Url.Page("/Library/Vulkan/_layerintro")">Layers & Debugging</a></li>
                            <li><a href="#" class="link_decor content-link" data-url="@Url.Page("/Library/Vulkan/_threading")">Threading Behavior</a></li>
                        </ul>
                    </div>
                </div>

                <div>
                    <button class="chapter_btn_toggle collapsed align-items-center rounded FG" type="button"
                        data-bs-toggle="collapse" data-bs-target="#installation" aria-expanded="true" aria-controls="installation">
                        <ion-icon class="expanded" name="chevron-forward-outline"></ion-icon>
                        Installation
                    </button>
                    <div class="collapse" id="installation">
                        <ul class="chapter_listElement list-unstyled fw-normal pb-1 small">
                            <li><a href="#" class="link_decor content-link" data-url="@Url.Page("/Library/Vulkan/_vulkanSDK")">Vulkan SDK</a></li>
                        </ul>
                    </div>
                </div>


            </li>
        </ul>
    </div>
}

@section Selected_Content {

    <div class="main_content" id="tutorial_content" data-startup-url="@Url.Page("/Library/" + ViewData["Folder"] + "/_intro")">
        <p>Error Loading _intro.cshtml file.</p>
    </div>
}

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/VulkanTutorialFunctions.js"></script>
    }